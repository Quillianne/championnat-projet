CREATE TABLE CLUB
   (
    CLUB_ID NUMBER NOT NULL,
    NOM VARCHAR2(20)  NOT NULL,
	EMPLACEMENT VARCHAR2(20)  NOT NULL,
    ENTRAINEUR VARCHAR2(20)  NOT NULL,
    SURNOM VARCHAR2(5) NOT NULL,
    CONSTRAINT PK_EMP PRIMARY KEY (CLUB_ID)
   ) ;

CREATE TABLE MATCH
   (
    MATCH_ID NUMBER NOT NULL,
    TOUR_ID NUMBER NOT NULL,
    EQUIPE_DOMICILE_ID NUMBER NOT NULL,
    EQUIPE_EXTERIEUR_ID NUMBER NOT NULL,
    SCORE_DOMICILE NUMBER,
    SCORE_EXTERIEUR NUMBER,
    CONSTRAINT PK_MATCH PRIMARY KEY (MATCH_ID),
    CONSTRAINT FK_TOUR FOREIGN KEY (TOUR_ID) REFERENCES TOUR(TOUR_ID),
    CONSTRAINT FK_EQUIPE_DOMICILE FOREIGN KEY (EQUIPE_DOMICILE_ID) REFERENCES CLUB(CLUB_ID),
    CONSTRAINT FK_EQUIPE_EXTERIEUR FOREIGN KEY (EQUIPE_EXTERIEUR_ID) REFERENCES CLUB(CLUB_ID)
   ) ;

CREATE TABLE TOUR
   (
    TOUR_ID NUMBER NOT NULL,
    CHAMPIONNAT_ID NUMBER NOT NULL,
    NUMERO NUMBER NOT NULL,
    CONSTRAINT PK_TOUR PRIMARY KEY (TOUR_ID),
    CONSTRAINT FK_CHAMPIONNAT FOREIGN KEY (CHAMPIONNAT_ID) REFERENCES CHAMPIONNAT(CHAMPIONNAT_ID)
   ) ;

CREATE TABLE CHAMPIONNAT
   (
    CHAMPIONNAT_ID NUMBER NOT NULL,
    NOM VARCHAR2(50)  NOT NULL,
    CONSTRAINT PK_CHAMPIONNAT PRIMARY KEY (CHAMPIONNAT_ID)
   ) ;

CREATE TABLE STATISTIQUES
   (
    STATISTIQUES_ID NUMBER NOT NULL,
    CLUB_ID NUMBER NOT NULL,
    VICTOIRES_DOMICILE NUMBER,
    VICTOIRES_EXTERIEUR NUMBER,
    MATCHS_NULS NUMBER,
    DEFAITES NUMBER,
    SCORE NUMBER,
    GOAL_AVERAGE NUMBER,
    MATCHS_JOUES NUMBER,
    CONSTRAINT PK_STATISTIQUES PRIMARY KEY (STATISTIQUES_ID),
    CONSTRAINT FK_CLUB FOREIGN KEY (CLUB_ID) REFERENCES CLUB(CLUB_ID)
   ) ;
